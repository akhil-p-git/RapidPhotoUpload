# n8n Configuration
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_HOST=localhost
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-me-in-production

# Database
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=rapidphotoupload
DB_POSTGRESDB_USER=postgres
DB_POSTGRESDB_PASSWORD=postgres
DB_POSTGRESDB_SCHEMA=n8n

# Security
N8N_ENCRYPTION_KEY=generate-secure-key-here

# Backend API URL (for n8n to call backend)
BACKEND_API_URL=http://host.docker.internal:8080
BACKEND_JWT_SECRET=your-jwt-secret

# AWS S3 (or use MinIO for local dev)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_S3_BUCKET=rapidphotoupload-media
AWS_S3_ENDPOINT=http://minio:9000
AWS_S3_REGION=us-east-1

# SMTP (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SECURE=false
